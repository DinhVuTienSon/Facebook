<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFragment">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/profile_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="4dp" />
            <ImageView
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_background" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"
                app:strokeColor="@color/black"
                app:strokeWidth="10dp"
                android:layout_marginTop="130dp"
                android:src="@drawable/pic"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Your name"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_below="@+id/avatar"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Your quote"
                android:textSize="20sp"
                android:layout_below="@+id/name"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="9"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Number of friends"
                android:textSize="18sp"
                android:layout_below="@+id/follow"
                android:layout_marginLeft="10dp"/>

            <View
                android:id="@+id/break_line_profile"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/break_line"
                android:layout_below="@id/quote"
                android:layout_margin="15dp" />

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/black"
                android:padding="10dp"
                android:text="Edit profile"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/break_line_profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bio1"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="15dp"
                android:text="Details"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_below="@id/btnEdit" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_below="@id/bio1"
                android:weightSum="8">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:importantForAccessibility="no"
                    android:scaleType="fitStart"
                    android:src="@drawable/baseline_house_24" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Lives in"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_weight="6"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/country"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_below="@id/address"
                android:weightSum="8">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitStart"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:src="@drawable/baseline_location_on_24"
                    android:importantForAccessibility="no" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_weight="6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/workplace"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_below="@id/country"
                android:weightSum="8">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitStart"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:src="@drawable/baseline_work_24"
                    android:importantForAccessibility="no" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Work"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_weight="6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/school"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_below="@id/workplace"
                android:weightSum="8">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitStart"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:src="@drawable/baseline_school_24"
                    android:importantForAccessibility="no" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Education"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_weight="7"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/website"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_below="@id/school"
                android:weightSum="8">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitStart"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:src="@drawable/baseline_link_24"
                    android:importantForAccessibility="no" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_weight="7"/>
            </LinearLayout>

            <View
                android:id="@+id/break_line_menu2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/break_line"
                android:layout_below="@id/website"
                android:layout_margin="15dp" />

            <TextView
                android:id="@+id/bio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="15dp"
                android:text="Friends"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_below="@id/website" />


            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/friendlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bio2"
                android:baselineAligned="false">

                <!-- Friend 1 -->
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/p1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="20dp"
                        android:importantForAccessibility="no"
                        android:layout_marginStart="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile_background" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Friend 1"
                        android:textAlignment="center"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Friend 2 -->
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/p2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="20dp"
                        android:importantForAccessibility="no"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile_background" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Friend 2"
                        android:textAlignment="center"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Friend 3 -->
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/p3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="20dp"
                        android:importantForAccessibility="no"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/profile_background" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Friend 3"
                        android:textAlignment="center"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/break_line_menu3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/break_line"
                android:layout_below="@id/friendlist"
                android:layout_margin="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/postheader"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="15dp"
                android:text="Post"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_below="@id/friendlist" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/postheader"
                android:background="@color/white"/>


        </RelativeLayout>
    </ScrollView>
</FrameLayout>